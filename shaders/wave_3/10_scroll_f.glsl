vec4 render() {
  wave_init();

  // ===========================================================================

  vec2 uv_ = uv_centered;

  // ===========================================================================

  wave_reflect(uv_);

  // ===========================================================================

  vec2 coord_ = uv_ * resolution + resolution / 2.0;
  vec4 o = read_coord(
    buffPrev,
    coord_
  );

  return vec4(o.rgb, 1.0);
}
